@using QuizletWebMvc.ViewModels.Achivement;
@model UserAchivement;
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Badge</h4>
                <div class = "row">
                    @foreach(var item in Model.badges)
                    {
                        <div class="col-2 grid-margin">
                            <div class="card">
                                <div class="card-small-body text-center">
                                    <div class="small-text">@item.NameBadge</div>
                                    @if(item.IsAchieved)
                                    {
                                        <div class="small-text">@item.DateAchieved</div>
                                        <input type="checkbox" id="checkbox" checked disabled>
                                    }
                                    else
                                    {
                                        <input type="checkbox" id="checkbox" disabled>
                                    }
                                    
                                </div>
                            </div>
                        </div>
                    }
                   
                </div>
            </div>
        </div>
    </div>

</div>