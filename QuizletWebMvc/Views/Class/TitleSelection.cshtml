@using QuizletWebMvc.ViewModels.Class;
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    int classId = int.Parse(HttpContextAccessor.HttpContext.Session.GetString("CurrentClassId"));
}
@{
    Layout = null;
}
@model ListChoiceTitle;

<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="HeaderHome" />
    
</head>
<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_sidebar.html -->
        <partial name="_Navigation" />
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_navbar.html -->
            <partial name="TopNavbar" />
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Class room detail</h4>
                                    <div class="template-demo">
                                        <a href="@Url.Action("ShowDetailOwnClassLearningModule", "Class",new{classId = classId})" class="btn btn-outline-primary"><i class="fas fa-arrow-left"></i></a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">Select your title you want</h4>
                                    <p class="card-description">
                                    </p>
                                    <div class="table-responsive">
                                        <table class="table table-dark">
                                            <thead>
                                                <tr>
                                                    <th>Title name</th>
                                                    <th>Describe</th>
                                                    <th>Function</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach(var item in Model.TitleChoiceViewModels)
                                                {
                                                    <tr>
                                                        <td>@item.TitleName</td>
                                                        <td>@item.Describe</td>
                                                        <td><a href="@Url.Action("LearningModuleSelection", "Class",new{titleId = item.TitleId})" class="btn btn-outline-primary"><i class="fas fa-check"></i></a></td>
                                                    </tr>
                                                  
                                                }
                                                
                                                <!-- Add more data rows as needed -->
                                            </tbody>
                                        </table>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->

            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <script src="script.js"></script>
    <!-- container-scroller -->
    <partial name="FooterHome" />
    <partial name="Warnings" />
</body>
</html>
