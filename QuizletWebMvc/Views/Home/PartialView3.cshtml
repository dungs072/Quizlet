@using QuizletWebMvc.ViewModels.Achivement;
@model UserAchivement;
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Badges Achiever</h4>
                <div class="row">Modules</div>
                <div class = "row">
                    @foreach(var item in Model.moduleBadges)
                    {
                        <div class="col-lg-3 grid-margin stretch-card">
                            <div class="card my-card" style="width: 18rem;">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@item.NameBadge</h5>
                                    @if (item.Image != null)
                                    {
                                        <img src="@item.Image" alt="Card Image 1">
                                    }
                                    @if (item.IsAchieved)
                                    {
                                        <div class="small-text">@item.DateAchieved</div>
                                        <input type="checkbox" id="checkbox" checked disabled>
                                    }
                                    else
                                    {
                                        <div class="btn-column">
                                            <input type="checkbox" id="checkbox" disabled>
                                        </div>
                                       
                                    }

                                </div>
                            </div>
                        </div>
                    }
                   
                </div>
                <div class="row">Terminologies</div>
                <div class="row">
                    @foreach (var item in Model.termBadges)
                    {
                        <div class="col-lg-3 grid-margin stretch-card">
                            <div class="card my-card" style="width: 18rem;">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@item.NameBadge</h5>
                                    @if (item.Image != null)
                                    {
                                        <img src="@item.Image" alt="Card Image 1">
                                    }
                                    @if (item.IsAchieved)
                                    {
                                        <div class="small-text">@item.DateAchieved</div>
                                        <input type="checkbox" id="checkbox" checked disabled>
                                    }
                                    else
                                    {
                                        <div class="btn-column">
                                            <input type="checkbox" id="checkbox" disabled>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    }

                </div>
                <div class="row">Participants</div>
                <div class="row">
                    @foreach (var item in Model.participantBadges)
                    {
                        <div class="col-lg-3 grid-margin stretch-card">
                            <div class="card my-card" style="width: 18rem;">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@item.NameBadge</h5>
                                    @if (item.Image != null)
                                    {
                                        <img src="@item.Image" alt="Card Image 1">
                                    }
                                    @if (item.IsAchieved)
                                    {
                                        <div class="small-text">@item.DateAchieved</div>
                                        <input type="checkbox" id="checkbox" checked disabled>
                                    }
                                    else
                                    {
                                        <div class="btn-column">
                                            <input type="checkbox" id="checkbox" disabled>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    }

                </div>
            
            </div>
        </div>
    </div>

</div>