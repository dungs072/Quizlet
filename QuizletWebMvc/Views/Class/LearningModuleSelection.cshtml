@using QuizletWebMvc.ViewModels.Class;
@{
    Layout = null;
    int count = 1;
}
@model ListChoiceTitleLearningModule;

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="styles.css">
    <partial name="HeaderHome" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const clickableRow = document.querySelector('.clickable-row');
            const dropdownRow = document.querySelector('.dropdown-row');

            clickableRow.addEventListener('click', function () {
                dropdownRow.style.display = dropdownRow.style.display === 'none' ? 'table-row' : 'none';
            });
        });
    </script>
    
    <style>
        /* styles.css */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        .clickable-row {
            cursor: pointer;
        }

        .dropdown-row {
            display: none;
        }

        .dropdown-content {
            background-color: #f9f9f9;
            padding: 10px;
        }

        .small-dropdown-table {
            width: 50%; /* Adjust the width to your preference */
            /* Add any other styling you want for the smaller dropdown table */
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_sidebar.html -->
        <partial name="_Navigation" />
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_navbar.html -->
            <partial name="TopNavbar" />
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Select your module you want to add to your class</h4>
                                    <div class="template-demo">
                                        <a href="@Url.Action("YourOwnClass", "Class")" class="btn btn-outline-primary">Back</a>
                                        <a href="@Url.Action("ShowDetailOwnClassLearningModule", "Class")" class="btn btn-outline-primary">Learning Modules</a>
                                        <a href="@Url.Action("ShowDetailOwnClassLearningModule", "Class")" class="btn btn-outline-primary">Participants</a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">Class room detail</h4>
                                    <p class="card-description">
                                    </p>
                                    <div class="table-responsive">
                                        <table class="table table-dark">
                                            <thead>
                                                <tr>
                                                    <th>Title name</th>
                                                    <th>Describe</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach(var item in Model.TitleChoiceViewModels)
                                                {
                                                    <tr class="clickable-row" id="clickable-row(@count)">
                                                        <td>@item.TitleViewModel.TitleName</td>
                                                        <td>@item.TitleViewModel.Describe</td>
                                                    </tr>
                                                    <tr class="dropdown-row" id="dropdown-row(@count)">
                                                        <td colspan="2">
                                                            <div class="dropdown-content">
                                                                <!-- Content for the dropdown table -->
                                                                <table class="table table-dark">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Module name</th>
                                                                            <th>Describe</th>
                                                                            <th>Function</th>
                                                                        </tr>
                                                                    </thead>
                                                                    @foreach(var smallItem in item.LearningModules)
                                                                    {
                                                                        <tr>
                                                                            <td>@smallItem.LearningModuleName</td>
                                                                            <td>@smallItem.Describe</td>
                                                                            <td>
                                                                                <button class="btn btn-danger deleteButton" data-toggle="modal" data-target="#deleteWarningModal" value="DetailOwnClass:">Delete</button>
                                                                            </td>
                                                                            <td>
                                                                                <a href="@Url.Action("AddLearningModuleToClass", "Class")" class="btn btn-success" style="display: block; width: 100%;">Add a learning module</a>
                                                                            </td>
                                                                        </tr>
                                                                    }           
                                                                </table>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                                
                                                <!-- Add more data rows as needed -->
                                            </tbody>
                                        </table>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->

            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <script src="script.js"></script>
    <!-- container-scroller -->
    <partial name="FooterHome" />
    <partial name="Warnings" />
</body>
</html>
