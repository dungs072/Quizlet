@using QuizletWebMvc.ViewModels.Terminology;
@using QuizletWebMvc.ViewModels.User;
@{
    Layout = null;
    int count = 1;
}
@model ListLearningModuleViewModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="HeaderHome" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_sidebar.html -->
        <partial name="_Navigation" />
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_navbar.html -->
            <partial name="TopNavbar" />
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">@Model.TitleViewModel.TitleName</h4>
                                    <p class="card-description">
                                        @Model.TitleViewModel.Describe
                                    </p>
                                    <div class="table-responsive">
                                        <table class="table table-dark">
                                            <thead>
                                                <tr>
                                                    <th> # </th>
                                                    <th> Module name </th>
                                                    <th> Describe </th>
                                                    <th> Functions </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Modules)
                                                {
                                                    <tr>
                                                        <td> @count </td>
                                                        <td>@item.LearningModuleName</td>
                                                        <td>@item.Describe </td>
                                                        <td>
                                                            <a href="@Url.Action("EditLearningModule", "LearningModule", new { learningModuleId = item.LearningModuleId })" class="btn btn-secondary">Edit</a>
                                                            <a href="@Url.Action("Term", "Term", new{learningModuleId = item.LearningModuleId})" class="btn btn-success">Terminologies</a>
                                                            <button class="btn btn-danger deleteButton" data-toggle="modal" data-target="#deleteWarningModal" value="LearningModule:@item.LearningModuleId.ToString():@item.TitleId.ToString()">Delete</button>
                                                        </td>
                                                    </tr>
                                                    count++;
                                                }
                                                <tr>
                                                    <td colspan="4">
                                                        <a href="@Url.Action("CreateLearningModule", "LearningModule",new{titleId = Model.TitleViewModel.TitleId})" class="btn btn-success" style="display: block; width: 100%;">Add an Module</a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->

            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <partial name="FooterHome" />
    <partial name="Warnings" />
</body>
</html>