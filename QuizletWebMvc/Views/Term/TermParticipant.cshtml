@using QuizletWebMvc.ViewModels.Terminology;
@using QuizletWebMvc.ViewModels.User;
@{
    Layout = null;
    int count = 1;
}
@model ListTermViewModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="HeaderHome" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_sidebar.html -->
        <partial name="_Navigation" />
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_navbar.html -->
            <partial name="TopNavbar" />
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">@Model.LearningModuleViewModel.LearningModuleName</h4>
                                    <p class="card-description">@Model.LearningModuleViewModel.Describe</p>
                                    <div class="template-demo">
                                        <a href="@Url.Action("BackToShowDetailJoinClassLearningModule", "Class")" class="btn btn-outline-primary"> <i class="fas fa-arrow-left"></i></a>
                                        @if(Model.Terms.Count()<4)
                                        {
                                            
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("PracticeTerm", "Term", new{learningModuleId = Model.LearningModuleViewModel.LearningModuleId, isOwned = false})" class="btn btn-outline-primary"><i class="fas fa-book"></i>Practice</a>
                                        }
                                        
                                       @*  <button type="button" class="btn btn-primary btn-fw">Primary</button> *@
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">Flash cards</h4>
                                    <p class="card-description">

                                    </p>
                                    <div class="table-responsive">
                                        <table class="table table-dark">
                                            <thead>
                                                <tr>
                                                    <th> # </th>
                                                    <th> Flash card name </th>
                                                    <th> Explanation </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Terms)
                                                {
                                                    <tr>
                                                        <td> @count </td>
                                                        <td>@item.TermName</td>
                                                        <td>@item.Explaination </td>
                                                       
                                                    </tr>
                                                    count++;
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->

            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <partial name="FooterHome" />
    <partial name="Warnings" />
</body>
</html>

