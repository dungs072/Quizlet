@{
    ViewData["Title"] = "Create your own class";
    Layout = null;
}
@using QuizletWebMvc.ViewModels.Class;
@model ClassViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="HeaderHome" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_sidebar.html -->
        <partial name="_Navigation" />
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_navbar.html -->
            <partial name="TopNavbar" />
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Create new class</h4>
                                    <p class="card-description"></p>
                                    <form asp-action="HandleCreateClass" method="post" class="forms-sample">
                                        <div class="form-group">
                                            <label for="exampleInputName1">Name</label>
                                            <input asp-for="ClassName" type="text" class="form-control" id="exampleInputName1" placeholder="####" maxlength="75">
                                            <span asp-validation-for="ClassName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail3">Describe</label>
                                            <input asp-for="Describe" type="text" class="form-control" placeholder="####">
                                        </div>
                                        <div class="form-group hidden">
                                            <label for="exampleInputEmail3">UserId</label>
                                            <input asp-for="UserId" type="text" class="form-control" placeholder="####" value="@Model.UserId">
                                        </div>
                                        <button type="submit" class="btn btn-success mr-2">Create</button>
                                        <a href="@Url.Action("YourOwnClass", "Class")" class="btn btn-dark">Cancel</a>
                                    </form>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->

            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <partial name="FooterHome" />
</body>
</html>
